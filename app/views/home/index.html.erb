<% if current_user.has_role('Admin') || current_user.super_admin? %>
  <%= render 'dashboards/payment_dashboard' %>
<% elsif @institution %>
    <%= render 'dashboards/institution' %>
<% elsif current_user.has_role('Member') and current_user.person.status==true %>
    <%= render 'dashboards/member' %>
<% elsif current_user.person.blank? %>
    <%= render 'dashboards/guest' %>
<% end %>