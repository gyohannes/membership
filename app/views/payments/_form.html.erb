<%= simple_form_for(@payment) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.association :person %>
    <%= f.association :mp_year %>
    <%= f.input :remark %>
    <%= f.input :status %>
    <%= f.input :attachment, as: :file, class: "form-control show-tick" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
