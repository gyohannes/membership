<div class="panel-heading">
    Report
</div>

<div class="panel-body">
  <%= simple_form_for reports_trainings_path, :remote => true do |f| %>
<div class="row">
    <div class="col-sm-6">
      <%= f.input :training_type, as: :radio_buttons, item_wrapper_tag: 'span', collection: ["Pre-Service", "In-Service"] %>
  </div>

    <div class="col-sm-6">
      <%= f.input :program_area, collection: ProgramArea.all %>
      <%= f.input :training_title, collection: TrainingTitle.all %>
  </div>
</div>
    <div class="row">
      <div class="col-sm-offset-4 col-sm-8">
        <%= f.button :submit, 'Search' %>
      </div>
    </div>

  <% end %>
<hr/>

  <div id="training_report">
      <%= render partial: 'trainings' %>
  </div>

</div>