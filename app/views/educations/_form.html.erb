<%= simple_form_for(@education) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input_field :person_id, as: :hidden, input_html: {value: @education.person_id} %>
    <%= f.input :institution_name, class: "form-control show-tick" %>
    <%= f.input :study_field, class: "form-control show-tick" %>
    <%= f.input :qualification, class: "form-control show-tick" %>
    <%= f.input :from, as: :string, input_html: {"data-format": "YYYY-MM-DD",class: "js-dtp"} %>
    <%= f.input :to, as: :string, input_html: {"data-format": "YYYY-MM-DD",class: "js-dtp"} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
