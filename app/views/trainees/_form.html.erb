<%= simple_form_for(@trainee) do |f| %>
  <%= f.error_notification %>
  <%= f.input :training_id, collection: [@training] %>
  <%= f.input :person_id, collection: [@person] %>
  <%= f.input :pre_training_score %>
  <%= f.input :post_training_score %>
  <%= f.input :status, collection: Trainee::STATUSES %>
  <%= f.input :trainer_feedback %>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
