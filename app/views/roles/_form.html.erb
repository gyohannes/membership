<%= simple_form_for(@role) do |f| %>
  <%= f.error_notification %>

  <div class="form-group form-float">
    <div class="form-line">
        <label class="form-label">Name</label>
        <%= f.input_field :name, class: "form-control show-tick" %>
    </div>
    <%= f.full_error :name %>
  </div>

  <div class="form-group form-float">
    <div class="form-line">
        <label class="form-label">Description</label>
        <%= f.input_field :description, class: "form-control show-tick" %>
    </div>
    <%= f.full_error :description %>
  </div>


  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
