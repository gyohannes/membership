<%= simple_form_for(@user, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
    <div class="signin-top-info">Sign up form</div>
    <div class="form-group has-feedback">
      <%= f.input :email, class: "form-control", placeholder:"Email", autofocus: true %>
      <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
    </div>
    <div class="form-group has-feedback">
      <%= f.input :password, autocomplete: "off", class: "form-control", placeholder: "Password", required: true %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>

    <div class="form-group has-feedback">
      <%= f.input :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm Password", required: true %>
      <span class="glyphicon glyphicon-lock form-control-feedback"></span>
    </div>
    <%= f.input :role, as: :hidden %>
    <div class="row">
      <div class="col-xs-8"></div>
      <div class="col-xs-4">
        <%= f.submit "SIGN UP",class: "btn btn-success btn-block btn-flat"  %>
      </div>
    </div>
<% end %>