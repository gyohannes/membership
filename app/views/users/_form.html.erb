<%= simple_form_for(@user) do |f| %>
  <%= f.error_notification %>
  <%= f.input :user_type, as: :hidden, value: @user.user_type %>
  <%= f.input :email %>
    <%= f.input :organization_unit_id, collection: @organization_units, class: "form-control show-tick" %>
  <%= f.input :password %>
  <%= f.input :password_confirmation, label: 'Confirm Password' %>
    <center>
      <%= f.check_box :admin, id: "admin", class: "filled-in chk-col-pink" %>
      <label for="admin">Admin</label>
    </center>

  <div class="form-actions">
    <%= f.button :submit, 'Submit', class: 'btn btn-outline btn-primary' %>
  </div>
<% end %>
