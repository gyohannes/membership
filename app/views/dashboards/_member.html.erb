<% if current_user and current_user.has_role('Member') and current_user.person.status==true %>
<% content_for :header do %>
  <div class="block-header">
    <h2>Member Dashboard</h2>
  </div>

<div class="row clearfix">
    <%= link_to member_fees_payments_path(type: 'Unpaid') do %>
      <div class="col-sm-4">
        <div class="info-box infobox-type-5 hover-zoom-effect">
          <div class="icon">
            <i class="material-icons col-success">payment</i>
          </div>
          <div class="content" style="min-height: 1486px;">
            <div class="text">Unpaid Membership Fees</div>
            <div class="number"><%= current_user.person.unpaid_fees.count %></div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to events_path(type: 'Upcoming') do %>
      <div class="col-sm-4">
        <div class="info-box infobox-type-5 hover-zoom-effect">
          <div class="icon">
            <i class="material-icons col-success">event</i>
          </div>
          <div class="content" style="min-height: 1486px;">
            <div class="text">Upcoming Events</div>
            <div class="number"><%= @upcoming_events.count %></div>
          </div>
        </div>
      </div>
    <% end %>

    <%= link_to trainings_path(type: 'all_upcoming') do %>
      <div class="col-sm-4">
        <div class="info-box infobox-type-5 hover-zoom-effect">
          <div class="icon">
            <i class="material-icons col-success">library_books</i>
          </div>
          <div class="content" style="min-height: 1486px;">
            <div class="text">Upcoming Trainings</div>
            <div class="number"><%= Training.upcoming_trainings.count %></div>
          </div>
        </div>
      </div>
    <% end %>
</div>
<% end %>
<%= render template: '/people/show', locals: {:@person => current_user.person}  %>
<% end %>