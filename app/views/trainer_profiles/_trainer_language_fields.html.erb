<legend>List langauges you are fluent</legend>
  <%= f.simple_fields_for :trainer_languages, :wrapper => false do |tf| %>
      <div class=" fields row">
        <div class='col-sm-10'>
          <%= tf.input :language_id, collection: Language.all, class: "form-control show-tick" %>
        </div>

        <div class='col-sm-2'>
          <%= tf.link_to_remove do %>
            <button type="button" class="btn btn-outline btn-danger"><i class="fa fa-close"></i> Remove</button>
          <% end %>
        </div>
      </div>
      <%= javascript_include_tag 'AdminBSBMaterialDesign/form_index' %>
  <% end %>
<%= f.link_to_add :trainer_languages do %>
  <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-plus"></i> Add Language</button>
<% end %>
