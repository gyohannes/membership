<%= simple_nested_form_for(@board_members_term) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :from, as: :string,  input_html: {"data-format": "YYYY-MM-DD",class: "js-dtp"} %>
    <%= f.input :to, as: :string,  input_html: {"data-format": "YYYY-MM-DD",class: "js-dtp"} %>
    <%= f.input :status,label: 'Current', label_html: {class: 'transparent_label'}, input_html:{class: "filled-in chk-col-pink"} %>
    <%= render partial: 'members', locals: {f: f} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, 'Save', class: 'btn btn-primary' %>
  </div>
<% end %>
