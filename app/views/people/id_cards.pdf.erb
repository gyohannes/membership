<style>
  th{
    text-align: left;
  }
  td{
    text-align: left;
  }
    .id_card{
      /* CR-80 cards */
      width: 85.6mm;
      height: 54mm;
      border: 1px solid gray;
      padding: 10px;
      border-radius: 6px;
    }
    .id_card_header{
      border-bottom: 5px solid #2992a7;
      margin-bottom: 10px;
      height: 15mm;
    }

    .details_and_photo{
      width: 100%;
      text-align: left;
      overflow: hidden;
    }

    .details{
      float: left;
      height: 29mm;
      width: 50mm;
      text-align: left;
    }
    .detail{
      font-size: 9px;
      padding: 5px;
      border-bottom: 1px solid silver;
    }

    .photo{
      float: right;
      overflow: hidden;
    }
    .id_card_footer{
      width: 100%;
      height: 12mm;
      text-align: right;
    }
</style>
<% @members.each do |member| %>
  <div class="id_card">
    <div class="id_card_header">
      <%= wicked_pdf_image_tag 'logo.png', height: '100%' %>
    </div>
    <div class="details_and_photo">
      <div class="details">
        <div class="detail"><label>ID Number:</label> <b><%= member.id_number %></b></div>
        <div class="detail"><label>Name:</label> <b><%= member.full_name %></b></div>
        <div class="detail"><label>Membership Type:</label> <b><%= member.membership_type %></b></div>
        <div class="detail"><label>Mobile Number:</label> <b><%= member.phone_number %></b></div>
        <div class="detail"><label>Member Since:</label> <b><%= member.created_at.year %></b></div>
      </div>
      <div class="photo">
        <%= wicked_pdf_image_tag member.photo.url(:medium), height: '110px' %>
      </div>
    </div>
    <div class="id_card_footer">
      <%= wicked_pdf_image_tag "barcodes/#{member.id_number}.png" %>
    </div>
  </div>
    <br/><br/>
<% end %>