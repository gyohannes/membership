    <div class="panel-heading">
      Events
    </div>
    <div class="panel-body">
    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      
      <th>Title</th>
      <th>Start date</th>
      <th>End date</th>
      <th>Maximum participants</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        
        <td><%= event.title %></td>
        <td><%= event.start_date %></td>
        <td><%= event.end_date %></td>
        <td><%= event.maximum_participants %></td>
        <td>
          <%= link_to 'Details', event if can? :read, event %>
          <%= link_to 'Edit', edit_event_path(event) if can? :edit, event %>
          <%= link_to 'Delete', event, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, event %>
        </td>
      </tr>
    <% end %>
</table>
<br>

<%= link_to 'Create Event', new_event_path, class: 'btn btn-primary' if can? :manage, Event %>
</div>
