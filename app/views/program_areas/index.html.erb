    <div class="panel-heading">
      Program Areas
    </div>
    <div class="panel-body">
    <table class="table table-bordered table-striped table-hover dataTable js-exportable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @program_areas.each do |program_area| %>
      <tr>
        <td><%= program_area.name %></td>
        <td><%= program_area.description %></td>
        <td>
          <%= link_to edit_program_area_path(program_area) do %>
            <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-edit"></i> Edit</button>
          <% end %>
          <%= link_to program_area, method: :delete, data: { confirm: 'Are you sure?' } do %>
            <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-remove"></i> Delete </button>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

      <%= link_to new_program_area_path do %>
        <button type="button" class="btn btn-outline btn-primary"><i class="fa fa-edit"></i> Add Program Area</button>
      <% end %>
</div>

